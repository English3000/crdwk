<%= javascript_pack_tag 'application' %>

<% if signed_in? %>
  <script>
    window.currentUser = <%= render(
      "api/sessions/user.json.jbuilder",
      user: current_user, current: true
    ).html_safe %>
  </script>
<% else %>
  <%= react_component 'AuthHeader', prerender: true %>
<% end %>

<%= react_component 'Home', prerender: true %>
<%= react_component 'Nav', prerender: true, page: 'Home', signedIn: signed_in? %>

<%= javascript_pack_tag 'bundle' %>
