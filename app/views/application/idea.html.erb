<%= javascript_pack_tag 'application' %>

<script>
  window.showIdea = <%= render(
    "api/ideas/show.json.jbuilder",
    idea: @idea
  ).html_safe %>
</script>

<% if !signed_in? %>
  <%= react_component 'AuthHeader', prerender: true %>
<% end %>
<%= react_component 'Idea', data: {idea: @idea, comments: @idea.comments}, prerender: true %>
<%= react_component 'Nav', prerender: true, page: 'Idea', signedIn: signed_in? %>

<%= javascript_pack_tag 'bundle' %>
